{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "paths": {
      "@project/common/*": ["./common/*"],
      "@project/browser/*": ["./browser/*"],
      "@project/worker/*": ["./worker/*"]
    },
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "checkJs": true,
    "allowJs": true
  },
  "exclude": [
    "./dist/**/*",
    "./functions/**/*"
  ]
}
